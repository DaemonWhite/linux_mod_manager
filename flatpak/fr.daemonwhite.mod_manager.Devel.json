{
    "app-id" : "fr.daemonwhite.mod_manager.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
	{"sdk": "org.freedesktop.Sdk", "version": "23.08" }
    ],
    "command" : "py_mod_manager",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=host",
        "--filesystem=~/.var/app/"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag" : "v0.10.0"
                }
            ],
            "cleanup" : [
                "*"
            ]
        },
        "python3-pyxdg.json",
        "python3-vdf.json",
        "python3-py7zr.json",
        "python3-rarfile.json",
        {
            "name" : "py_mod_manager",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/matheo/Projets/Python"
                }
            ],
            "config-opts" : [
                "-Ddevel=true"
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
